<div class="container">
  <div class="row">
    <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
  </div>
  <div class="row">
    <table class="table table-striped">
      <caption>天级客户销售数据</caption>
      <tr>
        <th>日期</th>
        <th>销售额</th>
      </tr>
      <tr>
        <td>2015-03-24</td>
        <td>2000000</td>
      </tr>
    </table>
  </div>
</div>


<script>
$(document).ready(function(){
  $.ajax({
    url: "<%= get_hourly_data_path %>",
    type: 'GET',
    dataType: 'json'
  }).done(function(result){
    if( result['status'] === 'failed' ){
      console.log(result['msg']);
    } else {
      renderTrendHightchart(result['data']);
    }
  });

});

function renderTrendHightchart(data){
  stats = {
    title: {
      text: '小时级别客户销售数据',
      x: -20 //center
    },
    subtitle: {
      x: -20
    },
    xAxis: {},
    yAxis: {
        title: {
            text: '购买数目'
        },
        plotLines: [{
            value: 0,
            width: 1,
            color: '#808080'
        }]
    },
    tooltip: {
        valueSuffix: ''
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle',
        borderWidth: 0
    },
  };

  stats.xAxis.categories  = data.hours;
  stats.subtitle.text     = data.platform;
  stats.series            = data.series;

  $('#container').highcharts(stats);

};

</script>
