<section class="hbox stretch">
  <%= render partial: 'aside' %>

  <!-- .vbox -->
  <section id="content">
    <section class="vbox">
      <header class="header bg-light bg-gradient b-b">
      </header>

      <section class="scrollable wrapper">
        <div class="">
          <% # Stage Display %>
          <div class="progress" style="width: 80%">
            <% @project.stages.each do |stage| %>
              <div class="progress-bar <%= @stage == stage ? 'progress-bar-striped active' : '' %>" style="width: 25%; border-right: 1px solid white">
                <%= stage.name %>
              </div>
            <% end %>
          </div>

          <div class="row">

            <div class="col-lg-8">
              <!-- .accordion -->
              <div class="panel-group m-b" id="accordion_stage1">

                <% @stage.tasks.each_with_index do |task, task_id| %>
                  <%= render layout: 'task', locals: { number: task_id+1, accordion_id: 'accordion_stage1', content: task.name} do %>
                    <% task.steps.each_with_index do |step, step_id| %>
                      <%= render layout: 'step', locals: { number: step_id+1, content: step.name } do %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>

            </div>

          </div>

        </div>
      </section>
    </section>
  </section>
  <!-- /.vbox -->
</section>

