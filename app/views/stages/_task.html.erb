<% collapse_id ||= "collapse_task#{number}" %>

<div class="panel task-panel" data-task-id="<%= task_id %>">
  <div class="panel-heading">
    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= accordion_id %>" href="#<%= collapse_id %>">
      任务<%= number %> - <%= content || html %>
    </a>
  </div>
  <div id="<%= collapse_id %>" class="panel-collapse collapse" style="height: 0px;">
    <div class="panel-body text-sm">
      <ul class="list-group gutter list-group-lg list-group-sp">
        <% # yield steps %>
        <%= yield %>
      </ul>
    </div>
  </div>
</div>
