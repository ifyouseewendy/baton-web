<% @stage.tasks.each_with_index do |task, task_id| %>
  <%= render layout: 'jingdong/task', locals: { number: task_id+1, accordion_id: 'accordion_stage1', content: task.name, task_id: task.id } do %>
    <% task.steps.each_with_index do |step, step_id| %>
      <%= render layout: 'jingdong/step', locals: { number: step_id+1, content: step.name, step_id: "#{step.id}", done: step.done?, result: html_format(step.result), direction: 'upload', date: step.file_list_date } do %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
