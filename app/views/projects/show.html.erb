<section class="hbox stretch">
  <%= render partial: 'aside' %>

  <!-- .vbox -->
  <section id="content">
    <section class="vbox">
      <header class="header bg-light bg-gradient b-b">
      </header>

      <section class="scrollable wrapper">
        <div class="">
          <% # Stage Display %>
          <div class="progress" style="width: 80%">
            <div class="progress-bar" style="width: 25%; border-right: 1px solid white">
              准备期
            </div>
            <div class="progress-bar progress-bar-striped active" style="width: 25%; border-right: 1px solid white">
              募集期
            </div>
          </div>

          <div class="row">

            <div class="col-lg-8">
              <!-- .accordion -->
              <div class="panel-group m-b" id="accordion_stage1">

                <%= render layout: 'task', locals: { number: 1, accordion_id: 'accordion_stage1', content: "获取广交所上传的准备文件" } do %>
                  <%= render layout: 'step', locals: { number: '01' } do %>
                    检查广交所是否上传文件至 FTP
                    <p>
                      <ul>
                        <li>《产品信息表》<a href='#'>下载</a></li>
                        <li>《产品合同模板》<a href='#'>下载</a></li>
                        <li>《合同可修改字段》<a href='#'>下载</a></li>
                      </ul>
                    </p>
                  <% end %>
                <% end %>

                <%= render layout: 'task', locals: { number: 2, accordion_id: 'accordion_stage1', content: "填写《产品发布文件》，并上传、校验" } do %>
                  <%= render partial: 'step', locals: { number: '01', content: '上传《产品发布文件》' } %>
                  <%= render partial: 'step', locals: { number: '02', content: '检验文件内容与编码' } %>
                  <%= render partial: 'step', locals: { number: '03', content: '生成京东指定格式 txt' } %>
                <% end %>

                <%= render layout: 'task', locals: { number: 3, accordion_id: 'accordion_stage1', content: "生成《产品合同文件》" } do %>
                  <%= render partial: 'step', locals: { number: '01', content: '批量生成产品合同' } %>
                <% end %>

                <%= render layout: 'task', locals: { number: 4, accordion_id: 'accordion_stage1', content: "发送给京东，等待确认" } do %>
                  <%= render partial: 'step', locals: { number: '01', content: '发送' } %>
                  <%= render partial: 'step', locals: { number: '02', content: '京东确认' } %>
                <% end %>

                <%= render layout: 'task', locals: { number: 5, accordion_id: 'accordion_stage1', content: "为广交所提供相关文件" } do %>
                  <%= render partial: 'step', locals: { number: '01', content: '填写《产品销售计划表》，并上传、校验' } %>
                  <%= render partial: 'step', locals: { number: '02', content: '生成《产品合同文件》' } %>
                  <%= render partial: 'step', locals: { number: '03', content: '发送' } %>
                  <%= render partial: 'step', locals: { number: '04', content: '广交所确认' } %>
                <% end %>

              </div>

            </div>

          </div>

        </div>
      </section>
    </section>
  </section>
  <!-- /.vbox -->
</section>

